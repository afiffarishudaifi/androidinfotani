<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundhijau"
    android:orientation="vertical"
    tools:context=".KonfirmasiPesananActivity">

    <ImageView
        android:id="@+id/formkonfpesan"
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/login_petani"
        android:src="@drawable/konfirmasipemesanan" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/formkonfirpesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bagiankonfirmasipemesanan">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="130dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="ID Pesan"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/idPesanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:text="ID PESAN" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="Nama Perusahaan"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/namaPerusahaanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:hint="Perusahaan" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="Komoditas"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/komoditasPesanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:hint="Komoditas" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="Tanggal"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tglPesanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:hint="Tanggal Pesan" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="Jumlah (Kg)"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/jmlPesanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:hint="Jumlah Pesan" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:text="Total Biaya (Rp)"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/biayaPesanK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bgtext"
                        android:gravity="center"
                        android:hint="Total Biaya" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/pt"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/loadingPanen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/linearLayoutBtnPesan"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btnKonfPesan"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bgmasuk"
                        android:textColor="@color/putih"
                        android:text="Konfirmasi"/>
                    <Button
                        android:id="@+id/btnTolakPesan"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bgkeluar"
                        android:textColor="@color/putih"
                        android:text="Tolak" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/logo"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/logo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/infotani"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>